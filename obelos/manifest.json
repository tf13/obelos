{
  "manifest_version": 2,
  "name": "Obelos",
  "version": "1.1.0",
  "description": "Highlight text, add annotations, and create bookmarks on any webpage with persistent storage and optional cross-device sync",
  "browser_specific_settings": {
    "gecko": {
      "id": "obelos@example.com"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "identity",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "lib/remotestorage.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["storage.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/obelos_20251216-48.png",
      "128": "icons/obelos_20251216-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/obelos_20251216-48.png",
    "128": "icons/obelos_20251216-128.png"
  }
}
