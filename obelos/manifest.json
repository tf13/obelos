{
  "manifest_version": 2,
  "name": "Obelos",
  "version": "1.0.0",
  "description": "Highlight text, add annotations, and create bookmarks on any webpage with persistent storage",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/obelos_20251216-48.png",
      "128": "icons/obelos_20251216-128.png"
    }
  },
  "icons": {
    "48": "icons/obelos_20251216-48.png",
    "128": "icons/obelos_20251216-128.png"
  }
}
